@model MyFastFit.ViewModels.MembersViewModel;

<h1>Add Member</h1>

<form asp-controller="Members" asp-action="Add" method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" />
        <span asp-validation-for="Name"></span>
    </div>


    <div class="form-group">
        <label asp-for="ShoeSize"></label>
        <input asp-for="ShoeSize" />
        <span asp-validation-for="ShoeSize"></span>
    </div>

    <div class="form-group">
        <label asp-for="ShoeType">Shoe Type</label>
        <select asp-for="ShoeType" asp-items="Model.ShoeTypes"></select>
        <span asp-validation-for="ShoeType"></span>
    </div>

    <input type="submit" value="Add Member" />

</form>